<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comyeunghudson.httpsgithub.myandroidcalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Result"
        android:height="170dp"
        android:width="600dp"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp"
        android:background="@android:color/background_light"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="0" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num1"
        android:height="50dp"
        android:width="75dp"
        android:layout_above="@+id/Sign"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num3"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignBaseline="@+id/Num2"
        android:layout_alignBottom="@+id/Num2"
        android:layout_toRightOf="@+id/Num2"
        android:layout_toEndOf="@+id/Num2"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num4"
        android:height="50dp"
        android:width="75dp"
        android:layout_below="@+id/Num7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num5"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignBaseline="@+id/Num4"
        android:layout_alignBottom="@+id/Num4"
        android:layout_toRightOf="@+id/Num7"
        android:layout_toEndOf="@+id/Num7"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Add"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignBaseline="@+id/Num3"
        android:layout_alignBottom="@+id/Num3"
        android:layout_toRightOf="@+id/Num3"
        android:layout_toEndOf="@+id/Num3"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Equals"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Decimal"
        android:layout_toEndOf="@+id/Decimal"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="Â±"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Sign"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num0"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Sign"
        android:layout_toEndOf="@+id/Sign"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Decimal"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Num0"
        android:layout_toEndOf="@+id/Num0"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Subtract"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignBaseline="@+id/Num6"
        android:layout_alignBottom="@+id/Num6"
        android:layout_toRightOf="@+id/Num3"
        android:layout_toEndOf="@+id/Num3"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num6"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignBaseline="@+id/Num5"
        android:layout_alignBottom="@+id/Num5"
        android:layout_toRightOf="@+id/Num5"
        android:layout_toEndOf="@+id/Num5"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num7"
        android:height="50dp"
        android:width="75dp"
        android:layout_below="@+id/clearEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Clear"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignBaseline="@+id/clearEntry"
        android:layout_alignBottom="@+id/clearEntry"
        android:layout_toRightOf="@+id/clearEntry"
        android:layout_toEndOf="@+id/clearEntry"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Divide"
        android:height="50dp"
        android:width="75dp"
        android:layout_below="@+id/Result"
        android:layout_toRightOf="@+id/Backspace"
        android:layout_toEndOf="@+id/Backspace"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num2"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignBaseline="@+id/Num1"
        android:layout_alignBottom="@+id/Num1"
        android:layout_toRightOf="@+id/Sign"
        android:layout_toEndOf="@+id/Sign"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num8"
        android:height="50dp"
        android:width="75dp"
        android:layout_alignBaseline="@+id/Num7"
        android:layout_alignBottom="@+id/Num7"
        android:layout_toRightOf="@+id/clearEntry"
        android:layout_toEndOf="@+id/clearEntry"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Num9"
        android:height="50dp"
        android:width="75dp"
        android:layout_below="@+id/Divide"
        android:layout_toRightOf="@+id/Clear"
        android:layout_toEndOf="@+id/Clear"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Backspace"
        android:height="50dp"
        android:width="75dp"
        android:layout_below="@+id/Result"
        android:layout_toRightOf="@+id/Clear"
        android:layout_toEndOf="@+id/Clear"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp" />

    <Button
        android:text="CE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearEntry"
        android:height="50dp"
        android:width="75dp"
        android:layout_below="@+id/Result"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:maxHeight="50dp"
        android:maxWidth="50dp" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Multiply"
        android:height="50dp"
        android:width="75dp"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_below="@+id/Divide"
        android:layout_toRightOf="@+id/Num6"
        android:layout_toEndOf="@+id/Num6" />

</RelativeLayout>
